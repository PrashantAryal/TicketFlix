@*Defining the model*@
@model Cinema

@*Defining the view data for Title*@
@{
    ViewData["Title"] = "Cinema Details";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class="text-center">Details for @Model.Name</h1>
        </p>
        <div class="row ">
            <div class="col-md-8 offset-2">
                @*for profile picture preview after inserting url*@
                <div class="form-group text-center">
                    <img id="DisplayPhotoPreview" class="rounded-circle" style="max-width:150px" />
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" readonly />
                    @*creating span incase validation is wrong*@
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    @*creating span incase validation is wrong*@
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    @*creating span incase validation is wrong*@
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }
                    <a class="btn btn-outline-secondary float-end " asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>
@*JQuery code*@
@section Scripts{
    <script>
        //if the validation is shown, the image dissappear so
        $(document).ready(function () {
            var output = document.getElementById('DisplayPhotoPreview');
            output.src = $("#Logo").val();
        })
    </script>
}