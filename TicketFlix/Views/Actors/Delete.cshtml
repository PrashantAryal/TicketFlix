@*Defining the model*@
@model Actor

@*Defining the view data for Title*@
@{
    ViewData["Title"] = "Delete Actor";
}
<div class="row text">
    <div class="col-md-8 offset-2 text-center">
        <p>
            <h1 class="text-center">Details for @Model.Name</h1>
        </p>
        <div class="row ">
            <div class="col-md-8 offset-2">
                @*for profile picture preview after inserting url*@
                <div class="form-group text-center">
                    <img id="DisplayPhotoPreview" class="rounded-circle" style="max-width:150px" />
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="DpURL" class="control-label"></label>
                    <input asp-for="DpURL" class="form-control" readonly />
                    @*creating span incase validation is wrong*@
                    <span asp-validation-for="DpURL" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    @*creating span incase validation is wrong*@
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Biography" class="control-label"></label>
                    <input asp-for="Biography" class="form-control" readonly />
                    @*creating span incase validation is wrong*@
                    <span asp-validation-for="Biography" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                       
                    </form>
                    <a class="btn btn-outline-secondary float-end" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>
@*JQuery code*@
@section Scripts{
    <script>
        //if the validation is shown, the image dissappear so
        $(document).ready(function () {
            var output = document.getElementById('DisplayPhotoPreview');
            output.src = $("#DpURL").val();
        })
    </script>
}