@*Defining the model*@
@model Actor

@*Defining the view data for Title*@
@{
    ViewData["Title"] = "Add New Actor";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class="text-center">Add a New Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @*for profile picture preview after inserting url*@
                    <div class="form-group text-center">
                        <img id="DisplayPhotoPreview" class="rounded-circle" style="max-width:150px" />
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="DpURL" class="control-label"></label>
                        <input asp-for="DpURL" class="form-control" />
                        @*creating span incase validation is wrong*@
                        <span asp-validation-for="DpURL" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        @*creating span incase validation is wrong*@
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Biography" class="control-label"></label>
                        <input asp-for="Biography" class="form-control" />
                        @*creating span incase validation is wrong*@
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary float-end" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@*JQuery code*@
@section Scripts{
    <script>
        //if the validation is shown, the image dissappear so
        $(document).ready(function () {
            var output = document.getElementById('DisplayPhotoPreview');
            output.src = $("#DpURL").val();
        })

        $("#DpURL").on("change", function () {
            var output = document.getElementById('DisplayPhotoPreview');
            output.src = $(this).val();
        })
    </script>
}